.t-loading {
  --td-loading-color : #808080;
}

.wrapper{
 top: 40rpx;
}

page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background-color: #F5F5F5;
}

.home-page-header {
  height: 64rpx !important; 
  font-size: 28rpx !important;
  color: #2B2B2B;
}

.home-page-container,
.home-page-header {
  display: block;
}

.home-page-container{
  padding: 0 24rpx;
}

.avatar-info{
  padding: 30rpx 0rpx 0rpx 40rpx;
  background-color: transparent;
  width: 100%;
  flex-direction: row;
  display: flex;
  align-self:center;
}

.avatar{
  background-color: #47BE3C;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}


.shop-info{
  padding-left: 25rpx;
  align-items: left;
  display: flex;
  flex-direction: column;
  line-height: 40rpx;
}
.team-info {
  margin-top: 15rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
}
.button.active{
  --td-button-light-bg-color:#47BE3C;
  --td-button-light-border-color:#47BE3C;
  --td-button-light-color:#FCFCFC;
}
.button{
  --td-button-light-border-color:#47BE3C;
  --td-button-light-bg-color:transparent;
  --td-button-light-color:#47BE3C;
}

.good-info{
  padding-top: 15rpx;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  align-items: left;
}
/* 商品列表样式 */
.list{
  display: flex;
  flex-direction: column;
  background-color: #FCFCFC;
  padding-left: 25rpx;
  padding-right: 25rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 4px #D1D1D1;
  margin-bottom: 35rpx;
  margin-top: -5rpx;
}
.good-des{
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
}
.price{
  color: #EA4C3E;
  font-weight: bold;
  font-size: large;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.images{
  display: flex;
  flex-direction: row;
  height: 230rpx;
  display: flex; 
  box-sizing: border-box;
  align-items: center;
  padding-bottom: 20rpx;
}
.go-to-top{
  position: fixed;
  background-color: #FCFCFC;
  border-radius: 50%;
  z-index:999;
  align-items: center;
  border-radius: 50%;
  box-shadow: 0px 0px 5px 1px #808080;
}
.end{
  align-items: center;
  font-size: 24rpx;
  padding-bottom: 25rpx;
  color: #808080;
}

.button-top{
  text-align: center;
  font-size: 24rpx;
}

.button-top text{
  position: relative;
  top:5rpx;
}

.buttons-top{
  margin-top: 30rpx;
}
.buttons-bottom{
  padding-top:20rpx;
  padding-bottom:25rpx;
  background-color: #FCFCFC;
  box-shadow: 1px 1px 4px #D1D1D1;
  margin: 0 24rpx;
  text-align: center;
}