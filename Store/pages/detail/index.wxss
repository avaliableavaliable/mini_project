.swiper-img {
  width: 100%;
  height: 100%;
  --td-swiper-radius: 0 rpx;
  z-index: -1;
}

.wrapper{
  top:20rpx;
}

page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom));
  background-color: #F5F5F5;
}

.home-page-container{
  padding: 0 24rpx;
  display: block;
}

.bottom{
  position: fixed;
  height: 110rpx;
  width: 100%;
  bottom: 0;
  background-color: #FCFCFC;
  z-index: 999;
  box-shadow: 1px -2px 4px #D1D1D1;
  align-items: center;
  padding: 0rpx 24rpx 0rpx 24rpx;
}

.icons{
  margin-top: 25rpx;
}
.purchase{
  align-items: center;
  background-color: #47BE3C;
  font-weight: bold;
  color:#FCFCFC;
}

.shop-info{
  padding-left: 25rpx;
  align-items: left;
  display: flex;
  flex-direction: column;
  line-height: 40rpx;
}
.team-info {
  margin-top: 25rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.good-info{
  padding-top: 25rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  align-items: left;
}
/* 商品列表样式 */
.list{
  display: flex;
  flex-direction: column;
  background-color: #FCFCFC;
  padding-left: 25rpx;
  padding-right: 25rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 4px #D1D1D1;
  margin-bottom: 20rpx;
  margin-top: -15rpx;
  z-index: 999;
}

.friends{
  background-color: #F5F5F5;
  margin-top: 20rpx;
  border-radius: 10rpx;
  padding: 15rpx 15rpx 15rpx 15rpx;
  display: flex;
  flex-direction: row;
}
.friends text{
  align-self: center;
  padding-left:30rpx;
}

.comments{
  display: flex;
  flex-direction: column;
  background-color: #FCFCFC;
  padding-left: 25rpx;
  padding-right: 25rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 4px #D1D1D1;
  margin-bottom: 35rpx;
  margin-top: 30rpx;
}

.all-comments{
  padding-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.line{
  border-bottom-style:solid;
  border-bottom-color:#999999;
  border-bottom-width:1rpx;
  height: 10rpx;
}

.comments-info{
  padding-top: 15rpx;
  padding-bottom: 25rpx;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  align-items: left;
}
.good-des{
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
}
.price{
  color: #EA4C3E;
  font-weight: bold;
  font-size: large;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.images{
  display: flex;
  flex-direction: row;
  height: 230rpx;
  display: flex; 
  box-sizing: border-box;
  align-items: center;
  padding-bottom: 20rpx;
}

.good-detail{
  width:100%;
}

.go-to-top{
  position: fixed;
  background-color: #FCFCFC;
  border-radius: 50%;
  z-index:999;
  align-items: center;
  border-radius: 50%;
  box-shadow: 0px 0px 5px 1px #808080;
}
